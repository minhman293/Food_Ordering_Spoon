<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AppActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.man293.food_ordering_spoon.fragments.HomeFragment"
        android:layout_weight="1"
        tools:layout="@layout/fragment_cart"
        />
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/MeowBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="@color/white"
        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_defaultIconColor="@color/gray"
        app:mbn_selectedIconColor="@color/jungle_green" />
</LinearLayout>