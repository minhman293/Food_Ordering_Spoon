<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.MainActivity"

    android:background="@color/jungle_green">


    <ImageView
        android:id="@+id/img_logo_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/logo_white"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/img_spoon_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spoon"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/img_logo_intro"
        app:layout_constraintEnd_toEndOf="@+id/img_logo_intro"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_intro" />
</androidx.constraintlayout.widget.ConstraintLayout>