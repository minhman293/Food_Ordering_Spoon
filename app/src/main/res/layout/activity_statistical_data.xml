                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bill3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bill2"
                    android:layout_margin="10dp"
                    android:background="@drawable/shadow_component_statictical"
                    >

                    <ImageView
                        android:id="@+id/icon_money_bill3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/money_bill_icon"
                        android:background="@drawable/background_money_icon"
