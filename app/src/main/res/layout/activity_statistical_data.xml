                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bill5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bill4"
                    android:layout_margin="10dp"
                    android:background="@drawable/shadow_component_statictical"
                    >

