<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <!-- top of home -->

            <RelativeLayout
                android:id="@+id/top_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_home"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Good for you. Great for life."
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:fontFamily="@font/poppins_bold" />

                <ImageButton
                    style="@style/icon_button"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/bell_icon_green" />

            </RelativeLayout>

            <!-- search bar-->

            <EditText
                android:id="@+id/search_bar_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bounder_input"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:hint="What are you looking for?"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <!--slider in home: right-to-left-->

            <ViewFlipper
                android:id="@+id/slider_home"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="15dp"
                android:autoStart="true"
                android:flipInterval="2000"
                android:inAnimation="@anim/slide_in_right"
                android:outAnimation="@anim/slide_out_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slide_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slide_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slide_3" />

            </ViewFlipper>


            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:fontFamily="@font/poppins_bold" />

            <!--slide button-->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_category_all"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bounder_btn_green"
                        android:text="All"
                        android:textAllCaps="false"
                        android:textColor="@color/jungle_green"
                        android:textSize="20sp"
                        app:fontFamily="@font/poppins_bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_category_pizza"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bounder_btn_green"
                        android:text="Pizza"
                        android:textAllCaps="false"
                        android:textColor="@color/jungle_green"
                        android:textSize="20sp"
                        app:fontFamily="@font/poppins_bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_category_noodles"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bounder_btn_green"
                        android:text="Noodles"
                        android:textAllCaps="false"
                        android:textColor="@color/jungle_green"
                        android:textSize="20sp"
                        app:fontFamily="@font/poppins_bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_category_beef"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bounder_btn_green"
                        android:text="Beef"
                        android:textAllCaps="false"
                        android:textColor="@color/jungle_green"
                        android:textSize="20sp"
                        app:fontFamily="@font/poppins_bold" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Top of the week"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:fontFamily="@font/poppins_bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/lightgray"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:id="@+id/product1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_1"
                            app:shapeAppearanceOverlay="@style/image_rounded" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="It is a established fact a established that a.."
                                android:textSize="@dimen/text_small" />

                            <TextView
                                style="@style/text_bold_green"
                                android:layout_marginTop="5dp"
                                android:text="$24.00" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/delete_button"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/small_green_button"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_icon_2" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/lightgray"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_1"
                            app:shapeAppearanceOverlay="@style/image_rounded" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="It is a established fact a established that a.."
                                android:textSize="@dimen/text_small" />

                            <TextView
                                style="@style/text_bold_green"
                                android:layout_marginTop="5dp"
                                android:text="$24.00" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/small_green_button"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_icon_2" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/lightgray"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/product_1"
                            app:shapeAppearanceOverlay="@style/image_rounded" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="It is a established fact a established that a.."
                                android:textSize="@dimen/text_small" />

                            <TextView
                                style="@style/text_bold_green"
                                android:layout_marginTop="5dp"
                                android:text="$24.00" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/small_green_button"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_icon_2" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>