<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/header_profile"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/spoon_orange">

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right"
                    >

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:orientation="vertical"
                        android:layout_gravity="right">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/logout_profile"
                            android:background="@drawable/nut_logout"
                            app:backgroundTint="@color/white"
                            >

                        </Button>
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_below="@id/header_profile">

            <TextView
                android:id="@+id/my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/image_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/my_profile"
                android:foreground="@drawable/hinhtron_profile_image"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="195dp"
                    android:layout_height="195dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_picture">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_profile"
                android:layout_margin="10dp"
                android:text="Name Customer"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name_profile"
                android:layout_margin="5dp"
                android:text="056 3499 836"
                android:textColor="@color/gray"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/address_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/phone_profile"
                android:layout_margin="5dp"
                android:text="305 Trần Cao Vân Street - Đà Nẵng"
                android:textColor="@color/gray"
                android:textSize="20sp">

            </TextView>

            <Button
                android:id="@+id/button_edit"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@id/address_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/nut_edit_profile"
                android:gravity="center"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_medium"
                app:backgroundTint="@color/orange">

            </Button>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>