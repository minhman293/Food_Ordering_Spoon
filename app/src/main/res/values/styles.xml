<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="icon_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/background_icon_button</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="image_rounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_bold_black">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_bold_orange">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- THEM FOR BOTTOM SHEET DIALOG -->
    <style name="bottom_sheet_dialog_theme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/lightgray_75</item>
    </style>

    <style name="heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="payment_logo">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="contentPadding">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/lightgray</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="custom_radio_button">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/custom_radio_button</item>
    </style>

</resources>