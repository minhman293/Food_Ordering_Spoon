<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="icon_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/background_icon_button</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="image_rounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_bold_black">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_bold_orange">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="primary_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_orange_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>